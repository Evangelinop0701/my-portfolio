<!-- GitHub Calendar Script -->

<script src="https://unpkg.com/github-calendar/dist/github-calendar.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("github-calendar");

        // Options for the calendar
        const options = {
            responsive: true,
            tooltips: true,
            global_stats: true,
            summary_text: 'Summary of contributions in the last year:'
        };

        try {
            // Initialize the calendar
            GitHubCalendar("#github-calendar", "Evangelinop0701", options)
                .then(() => {
                    console.log("GitHub calendar loaded successfully");
                })
                .catch(error => {
                    container.innerHTML = `
              <div class="error-message">
                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                <h4>Failed to load contribution data</h4>
                <p>Please check the username or try again later</p>
                <p><small>Error: ${error.message}</small></p>
              </div>
            `;
                    console.error("GitHub calendar error:", error);
                });
        } catch (error) {
            container.innerHTML = `
          <div class="error-message">
            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
            <h4>Error initializing calendar</h4>
            <p>${error.message}</p>
          </div>
        `;
            console.error("Initialization error:", error);
        }
    });
</script>
